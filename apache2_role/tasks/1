- name: install apache2 on ubuntu
      apt: name=apache2 update_cache=yes state=latest
      when: 'ansible_os_family == "Ubuntu" and ansible_distribution_version == "14"'
- name: install apache2 on centos
      yum: name=httpd update_cache=yes state=present
      when: 'ansible_os_family == "CentOS" and ansible_distribution_version == "7"'

